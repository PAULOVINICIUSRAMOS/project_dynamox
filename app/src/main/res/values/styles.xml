<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fontPath">
        <item name="android:fontFamily">@fonts/Roboto-Regular</item>
    </style>
    <style name="label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="label.selection">
        <item name="android:layout_marginTop">7dp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/colorGrayLight</item>
    </style>

    <style name="label.info">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="label.info.regular">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:layout_marginRight">5dp</item>

    </style>

</resources>